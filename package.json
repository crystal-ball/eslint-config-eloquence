{
  "name": "eslint-config-eloquence",
  "version": "16.5.0",
  "description": "Adaptive, robust, elqouent ESLint configuration",
  "main": "./src/index.js",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/crystal-ball/eslint-config-eloquence.git"
  },
  "keywords": [
    "eloquent",
    "eslint",
    "eslintconfig",
    "crystal-ball"
  ],
  "contributors": [
    "Dan Hedgecock <hedgecock.d@gmail.com> (https://danhedgecock.com)"
  ],
  "license": "ISC",
  "scripts": {
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "NODE_ENV=test eslint --format=pretty *.js src",
    "test:unit": "NODE_ENV=test jest src",
    "format": "prettier --write '*.{js,json,md}' '**/*.{js,json,md,mdx,scss}' !CHANGELOG.md"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "4.4.1",
    "@typescript-eslint/parser": "4.4.1",
    "babel-eslint": "10.1.0",
    "confusing-browser-globals": "1.0.9",
    "eslint": "7.11.0",
    "eslint-config-prettier": "6.12.0",
    "eslint-formatter-pretty": "4.0.0",
    "eslint-import-resolver-node": "0.3.4",
    "eslint-plugin-cypress": "2.11.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest-dom": "3.2.3",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.21.4",
    "eslint-plugin-react-hooks": "4.1.2",
    "eslint-plugin-testing-library": "3.9.1"
  },
  "devDependencies": {
    "@crystal-ball/commitizen-base": "2.8.0",
    "@crystal-ball/prettier-base": "2.4.0",
    "@crystal-ball/semantic-release-base": "2.22.0",
    "@types/jest": "26.0.15",
    "husky": "4.3.0",
    "jest": "26.6.0"
  },
  "prettier": "@crystal-ball/prettier-base",
  "config": {
    "commitizen": {
      "path": "@crystal-ball/commitizen-base"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "release": {
    "extends": [
      "@crystal-ball/semantic-release-base"
    ]
  },
  "renovate": {
    "extends": [
      "github>crystal-ball/renovate-base:library"
    ]
  }
}
